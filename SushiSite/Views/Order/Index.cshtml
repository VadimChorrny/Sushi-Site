@model IEnumerable<SushiSite.Models.Order>

<div style="margin-top: 100px;">
    <h1 class="mb-5">Your orders</h1>
    <div style="display: flex; flex-direction: row; gap: 30px;">
        @if (Model.Any())
        {
            @foreach (var order in Model)
            {
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@order.Name</h5>
                        <h5 class="card-title">@order.Surname</h5>
                        <h5 class="card-title">@order.LastName</h5>
                        <h5 class="card-title">@order.Phone</h5>
                        <h5 class="card-title">@order.Address</h5>
                        <h5 class="card-title">@order.CashSettlement</h5>
                        <h5 class="card-title">@order.NonCashCalculation</h5>
                    </div>
                    <div class="btn-group">
                        <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.OrderId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            }
        }
        else
        {
            <h1>List is empty!</h1>
            <img src="https://www.meme-arsenal.com/memes/d83a503e602d59c87c5376e87e32964c.jpg" />
        }
    </div>
</div>
