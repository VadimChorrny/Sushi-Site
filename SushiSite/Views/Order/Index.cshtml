@model IEnumerable<SushiSite.Models.Order>

<div>
    <h1 class="mb-5">Ваші замовлення</h1>
    <form asp-controller="Order" asp-action="Index" class="d-flex mb-5" style="width: 200px;">
        <input class="form-control me-sm-2" type="text" name="SearchString" placeholder="Ролли ...">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Пошук</button>
    </form>
    <div style="display: flex; flex-direction: row; gap: 30px; flex-wrap: wrap;">
        @if (Model.Any())
        {

            @foreach (var order in Model)
            {
                <partial name="_OrderCartPartial" model="@order" />
            }
        }
        else
        {
            <h1>List is empty!</h1>
            <img src="https://www.meme-arsenal.com/memes/d83a503e602d59c87c5376e87e32964c.jpg" />
        }
    </div>
</div>
