@model SushiSite.Models.ViewModel.OrderViewModel;

<div style="margin-top:100px;">
    <form method="post" asp-action="AddOrder">
        <h2 class="mb-3">Create a new order</h2>
        <div class="form-group row">
            <label asp-for="Order.Name" class="col-4"></label>
            <input id="modelInput" asp-for="Order.Name" class="form-control col-8">
            <span asp-validation-for="Order.Name" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Order.Surname" class="col-4"></label>
            <input id="modelInput" asp-for="Order.Surname" class="form-control col-8">
            <span asp-validation-for="Order.Surname" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Order.LastName" class="col-4"></label>
            <input id="modelInput" asp-for="Order.LastName" class="form-control col-8">
            <span asp-validation-for="Order.LastName" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Order.Address" class="col-4"></label>
            <input id="modelInput" asp-for="Order.Address" class="form-control col-8">
            <span asp-validation-for="Order.Address" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Order.Phone" class="col-4"></label>
            <input id="modelInput" asp-for="Order.Phone" class="form-control col-8">
            <span asp-validation-for="Order.Phone" class="offset-4 text-danger"></span>
        </div>
        <div class="form-group row">
            @*<label asp-for="Order.FoodId" class="col-4"></label>
            <select asp-for="Order.FoodId" asp-items="@Model.Foods" class="col-8">
                <option disabled>--Select Sushi--</option>
            </select>
            <span asp-validation-for="Order.FoodId" class="offset-4 text-danger"></span>*@
        </div>
        <div class="form-check">
            <label asp-for="Order.CashSettlement" class="form-check-label" for="flexCheckDefault">
                Cash
            </label>
            <input asp-for="Order.CashSettlement" class="form-check-input" type="checkbox" value="" id="modelInput">
        </div>
        <div class="form-check">
            <label asp-for="Order.NonCashCalculation" class="form-check-label" for="flexCheckChecked">
                Non Cash    
            </label>
            <input asp-for="Order.NonCashCalculation" class="form-check-input" type="checkbox" value="" id="modelInput" checked>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <input type="submit" onclick="validateInputs()" class="btn btn-success w-100" value="Create" />
            </div>
            <div class="col-6">
                <a asp-controller="Home" asp-action="Index" class="btn btn-dark w-100">Back</a>
            </div>
        </div>
    </form>
</div>

@* Client Validation *@
@section Scripts
{
    @{
    <partial name="_ValidationScriptsPartial.cshtml" />
    }
<script>
    function validateInputs() {
        const modelInput = document.getElementById("modelInput")
        if(modelInput.value == ""){
            Swal.fire({
            title: 'Error!',
            text: 'You must enter a valid model!',
            icon: 'error',
            confirmButtonText: 'Ok'
            })
        }
    }
</script>
}