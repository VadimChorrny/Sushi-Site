@model SushiSite.Models.Food
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="modal fade" id="image-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" style="position: relative;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="modal-body" style="display: flex; align-items: center; flex-direction:column; justify-content: center;">
                <img class="img-responsive center-block" src="" alt="" style="max-width: 600px;">
                @*<div>
                    <p class="card-text font-weight-bold text-dark"><span class="text-danger">Заголовок:</span> @Model.Title</p>
                    <p class="card-text font-weight-bold text-dark"><span class="text-danger">Опис:</span> @Model.Description</p>
                    <p class="card-text font-weight-bold text-dark"><span class="text-danger">Ціна:</span> @Model.Price гривень</p>
                </div>*@
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 p-3 border" style="background-color: #E5E7E9; min-width: 250px">
    <a href="#" class="thumbnail">
        <img src="@Model.Image" alt="..." style="width: 200px; height: 150px;">
    </a>
    <h4 class="card-header font-weight-bold text-dark" style="font-size: 20px">@Model.Title</h4>
    <p class="card-text font-weight-bold text-dark">Вага: <span class="text-danger">@Model.Weight</span></p>
    <p class="card-text font-weight-bold text-dark">Кількість: <span class="text-danger">@Model.Amount</span></p>

    <p class="card-text font-weight-bold text-dark">Ціна: <span class="text-danger">@Model.Price</span></p>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="btn-group">
            <a asp-controller="Home" asp-action="FoodDetails" asp-route-id="@Model.Id" class="btn btn-success" style="width: 245px;">Додати в кошик</a>
        </div>
    }
</div>