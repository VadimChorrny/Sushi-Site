@model IEnumerable<SushiSite.Models.Food>;

@{
    ViewData["Title"] = "Home Page";
}

<div style="margin-top: 100px;  display: flex; flex-direction: row; flex-wrap: wrap; gap: 20px">
    @if (Model.Any())
    {
        @foreach (var food in Model)
        {
            <div class="card border-primary mb-3" style="max-width: 40rem; min-width: 20rem; ">
                @if (food.Category != null)
                {
                    <div class="card-header">@food.Category.Name</div>

                }
                <div class="card-body">
                    <h4 class="card-header">@food.Title</h4>
                    <p class="card-text">@food.Description</p>
                    @if (food.Image != null)
                    {
                        <img style='width:80px; height:60px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(food.Image))" />
                    }
                    <p class="card-text">Weight: <span class="text-danger">@food.Weight</span></p>
                    @*<p class="card-text">@food.Category.Name</p>*@
                    <p class="card-text">Amount: <span class="text-danger">@food.Amount</span></p>
                    <p class="card-text font-weight-bold">Price: <span class="text-danger">@food.Price</span></p>
                </div>
            </div>
        }
    }
    else
    {
        <h1>List is empty!</h1>
        <img src="https://media.hswstatic.com/eyJidWNrZXQiOiJjb250ZW50Lmhzd3N0YXRpYy5jb20iLCJrZXkiOiJnaWZcL2ZlZWRpbmctY2F0LmpwZyIsImVkaXRzIjp7InJlc2l6ZSI6eyJ3aWR0aCI6ODI4fX19" />
    }
</div>