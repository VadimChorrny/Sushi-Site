@model IEnumerable<SushiSite.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div style="margin-top: 100px;" class="list-group">
    <h1 class="mb-5">Categories List</h1>
    <ul>
        @foreach(var category in Model)
        {
            <li class="list-group-item list-group-item-primary text-dark font-weight-bold">@category.Name</li>
        }
    </ul>
</div>
